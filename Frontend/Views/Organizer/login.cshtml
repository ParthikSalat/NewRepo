@model EventAPI.Models.OrganizerTb

@{
    ViewData["Title"] = "Login";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
<style>
    body {
        background-color: #f8f9fa; /* Light background color */
        font-family: Arial, sans-serif; /* Change font */
    }

    h1 {
        color: #343a40; /* Dark color for the heading */
        text-align: center;
        margin-top: 50px;
    }

    .login-container {
        max-width: 400px; /* Set max width */
        margin: auto; /* Center the form */
        padding: 20px; /* Add padding */
        background-color: #ffffff; /* White background for the form */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    }

    .form-group {
        margin-bottom: 15px; /* Space between fields */
    }

    .form-control {
        border-radius: 5px; /* Rounded input fields */
        border: 1px solid #ced4da; /* Border color */
        transition: border-color 0.3s; /* Smooth transition */
    }

        .form-control:focus {
            border-color: #007bff; /* Change border color on focus */
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Focus shadow */
        }

    .btn-primary {
        background-color: #007bff; /* Button color */
        border-color: #007bff; /* Button border */
        width: 100%; /* Full width button */
        padding: 10px; /* Padding for button */
        font-size: 16px; /* Button text size */
        border-radius: 5px; /* Rounded button */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker color on hover */
            border-color: #0056b3; /* Darker border on hover */
        }

    .text-danger {
        font-weight: bold; /* Bold error messages */
    }

    .footer-links {
        text-align: center; /* Center footer links */
        margin-top: 20px; /* Space above links */
    }

        .footer-links a {
            color: #007bff; /* Link color */
            text-decoration: none; /* Remove underline */
        }

            .footer-links a:hover {
                text-decoration: underline; /* Underline on hover */
            }
</style>

<div class="login-container">
    <h1>Login</h1>
    <h4>OrganizerTb</h4>
    <hr />
    <form asp-action="login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="OrganizerEmail" class="control-label">Email</label>
            <input asp-for="OrganizerEmail" class="form-control" />
            <span asp-validation-for="OrganizerEmail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="OrganizerPassword" class="control-label">Password</label>
            <input asp-for="OrganizerPassword" class="form-control" type="password" />
            <span asp-validation-for="OrganizerPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>
    </form>
</div>

<div class="footer-links">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

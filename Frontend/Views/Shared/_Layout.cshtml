<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Frontend.styles.css" asp-append-version="true" />
    <style>
        /* Body Background and Text Color */
        body {
            background-color: #121212; /* Light black background */
            color: #f8f9fa; /* Light text color for better contrast */
        }

        /* Header and Navbar Styles */
        .bg-light {
            background-color: rgba(255, 255, 255, 0.8) !important; /* Slightly transparent light background for header */
        }

        .navbar-brand {
            font-weight: bold;
            color: #007bff; /* Primary color for navbar brand */
        }

        .navbar-nav .nav-link {
            color: #007bff; /* Primary color for nav links */
        }

            .navbar-nav .nav-link:hover {
                color: #0056b3; /* Darker shade on hover */
            }

        /* Footer Styles */
        .bg-dark {
            background-color: #343a40 !important; /* Dark footer background */
        }

        .footer-links a {
            color: #ffffff !important; /* White color for footer links */
        }

            .footer-links a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <!-- Simple Header -->
    <header class="bg-light py-3">
        <div class="container">
            <nav class="navbar navbar-expand-sm navbar-light">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">EventSite</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Privacy", "Home")">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "User")">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Organizer")">Organizer</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("logout", "event")">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <!-- Main Content Section -->
    <div class="container">
        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>

    <!-- Simple Footer -->
    <footer class="bg-dark text-white py-4 mt-4">
        <div class="container text-center footer-links">
            <p>&copy; 2024 EventSite. All rights reserved.</p>
            <p>
                <a href="@Url.Action("Privacy", "Home")" class="text-white">Privacy Policy</a> |
                <a href="@Url.Action("Contact", "Home")" class="text-white">Contact Us</a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

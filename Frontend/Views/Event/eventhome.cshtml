@model IEnumerable<EventAPI.Models.EventTb>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Event Home</title>

    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRkZ+5LaFg6LnGp8+NfC4xy3Z5fw5t75ZfjaK+YlA" crossorigin="anonymous">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .banner {
            background-color: #007bff;
            color: white;
            padding: 40px;
            text-align: center;
        }

            .banner h1 {
                font-size: 3rem;
                font-weight: bold;
            }

            .banner p {
                font-size: 1.5rem;
            }

        .event-card {
            transition: transform 0.2s ease;
        }

            .event-card:hover {
                transform: scale(1.05);
            }

        .img-thumbnail {
            max-width: 100px;
            max-height: 100px;
        }
    </style>
</head>
<body>
    <!-- Banner Section -->
    <div class="banner">
        <h1>Join Our Vibrant Community of Travellers!</h1>
        <p>15 Nov 2024 | 11 AM - 9 PM | HITEX Exhibition Center, Hyderabad</p>
    </div>

    <div class="container mt-4">
        <h2 class="text-center mb-4">Upcoming Events</h2>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card event-card">
                       <img src="~/images/Events/@item.EventImage" class="card-img-top img-fluid" alt="@item.EventName">

                        <div class="card-body">
                            <h5 class="card-title">@item.EventName</h5>
                            <p class="card-text">Type: @item.EventType</p>
                            <p class="card-text">Artist: @item.EventArtist</p>
                            <p class="card-text">Price: $@item.EventTicketPrice</p>
                            <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <p class="text-center">
            <a asp-action="Create" class="btn btn-success">Create New Event</a>
        </p>
    </div>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-mQ93uAZa9A65l7lsfX0OJTlsoKpxU12lrP1glDzzXMgxF5Z5v3VV2Rw5dff3kKLK" crossorigin="anonymous"></script>
</body>
</html>

@model IEnumerable<EventAPI.Models.EventTb>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Event Ticket Booking</title>

    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRkZ+5LaFg6LnGp8+NfC4xy3Z5fw5t75ZfjaK+YlA" crossorigin="anonymous">

    <style>
        body {
            background-color: #f8f9fa;
            color: #333;
        }

        /* Updated Banner Style */
        .banner {
            background-color: #007bff; /* Blue background */
            color: white;
            padding: 60px 0;
            text-align: center;
            margin-bottom: 30px;
        }

            .banner h1 {
                font-size: 3rem;
                margin: 0;
                font-weight: bold;
            }

            .banner p {
                font-size: 1.5rem;
                margin: 20px 0 40px;
            }

        .search-form {
            margin-top: 20px;
        }

        .event-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .event-card:hover {
                transform: scale(1.05);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            }

        .category-title {
            font-weight: bold;
            margin: 30px 0;
            text-align: center;
            font-size: 2rem;
        }

        .footer {
            background-color: #343a40;
            color: white;
            padding: 20px 0;
            text-align: center;
            position: relative;
            bottom: 0;
            width: 100%;
        }

            .footer p {
                margin: 0;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .card-text {
            color: #555;
        }

        .price {
            font-size: 1.25rem;
            font-weight: bold;
            color: #28a745; /* Green for price */
        }

        .event-img {
            height: 200px;
            object-fit: cover;
        }

        .btn-book {
            background-color: #ffc107; /* Yellow for booking */
            color: #000;
            border: none;
        }

            .btn-book:hover {
                background-color: #e0a800;
            }
    </style>
</head>
<body>

    <!-- Banner Section -->
    <div class="banner">
        <h1>Book Your Next Adventure!</h1>
        <p>Secure your tickets for the most exciting events today!</p>
        <div class="container">
            <form method="get" action="@Url.Action("eventhome")" class="d-flex justify-content-center mb-4 search-form">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control me-2" placeholder="Search events..." aria-label="Search">
                <button type="submit" class="btn btn-light">Search</button>
            </form>
        </div>
    </div>

    <div class="container">
        <h2 class="category-title">Upcoming Events</h2>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card event-card">
                        <img src="~/images/@item.EventImage" class="card-img-top event-img" alt="@item.EventName">
                        <div class="card-body">
                            <h5 class="card-title">@item.EventName</h5>
                            <p class="card-text">Type: @item.EventType</p>
                            <p class="card-text">Artist: @item.EventArtist</p>
                            <p class="card-text price">Price: @item.EventTicketPrice</p>
                            <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-book">Book Now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>


    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-mQ93uAZa9A65l7lsfX0OJTlsoKpxU12lrP1glDzzXMgxF5Z5v3VV2Rw5dff3kKLK" crossorigin="anonymous"></script>
</body>
</html>

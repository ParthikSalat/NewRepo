@model IEnumerable<EventAPI.Models.EventTb>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Event Ticket Booking</title>

    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRkZ+5LaFg6LnGp8+NfC4xy3Z5fw5t75ZfjaK+YlA" crossorigin="anonymous">

    <style>
        /* Banner Styling */
        .banner {
            background-color: #007bff;
            padding: 40px 0;
            color: white;
        }

            .banner h1 {
                font-size: 2.5rem;
                font-weight: bold;
            }

            .banner p {
                font-size: 1.25rem;
            }

            .banner .btn-warning {
                color: black;
                font-weight: bold;
            }

        /* Event Card Styling */
        .event-card {
            border: none;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .event-card:hover {
                transform: scale(1.05);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            }

        .event-img {
            height: 200px;
            object-fit: cover;
        }

        .card-body {
            text-align: center;
        }

        .price {
            font-size: 1.25rem;
            font-weight: bold;
            color: #28a745;
        }

        .btn-book {
            background-color: #ffc107;
            color: black;
            font-weight: bold;
            border: none;
        }

            .btn-book:hover {
                background-color: #e0a800;
            }

    </style>
</head><!-- Banner Section -->
<!-- Banner Section with Slideshow -->
<div class="banner mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8 text-white">
                <h1>Explore Amazing Events Near You!</h1>
                <p>Find tickets for movies, concerts, plays, and more.</p>
                <a href="#" class="btn btn-warning btn-lg">Register Now</a>
            </div>
            <div class="col-md-4 text-center">
                <div id="bannerCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>

                        <div class="carousel-item active">
                            <img src="https://assets-in.bmscdn.com/discovery-catalog/events/tr:w-400,h-600,bg-CCCCCC/et00416502-fafmvzpsyg-portrait.jpg" alt="Event 1" class="img-fluid" height="200" width="200">
                        </div>
                        <div class="carousel-item">
                            <img src="https://i.scdn.co/image/ab67616d0000b273156f9ab02be895a9be3de100" alt="Event 2" class="img-fluid" height="200" width="200">
                        </div>
                        <div class="carousel-item">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRxRiRGyUEePWsD_dnp0KFG3JPuEzddd1IGsA&s" alt="Event 3" class="img-fluid" height="200" width="200">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Events Section -->
<div class="container">
    <h2 class="category-title text-center mb-4">Recommended Events</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card event-card">
                    <img src="@item.EventImage" class="card-img-top event-img" alt="@item.EventName">
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.EventName</h5>
                        <p class="card-text">Type: @item.EventType</p>
                        <p class="card-text">Artist: @item.EventArtist</p>
                        <p class="card-text price">₹@item.EventTicketPrice</p>
                        <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-book">Book Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

</html>
